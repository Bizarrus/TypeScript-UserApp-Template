{
	"compilerOptions": {
		"sourceMap": false,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"noImplicitUseStrict": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"es2015",
			"dom"
		],
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"ServerApp/**/*.ts",
		"ClientApp/**/*.ts"
	]
}
